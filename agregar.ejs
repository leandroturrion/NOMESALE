<!doctype html>
<html class="no-js" lang="ES">

<head>
  <title>¡publica!</title>
  <%- include('./partials/head') %>
</head>

<body>
  <%- include('./partials/preloader') %>
  <header>
    <%- include('./partials/header') %>
  </header>

  <main>



    <div class="form-register2">
      <h4>Carga tu producto</h4>

      <div id="errors"></div>
      <!--lo agrega pio para mostrar los errores del front validation-->


      <form id="formAdd" method="POST" action="" enctype="multipart/form-data">

        <div id="errors"></div>
        <!--Para mostrar los errores de validacion del front-->
        <div>
          <label for="nombre"></label>
          <input type="text"
            class="controlls2 <%= (typeof old != 'undefined' && old.nombre)?"is-valid":(typeof errors != 'undefined' && errors.nombre)?"is-invalid": ""  %>"
            id="nombre" name="nombre" value="<%= (typeof old != 'undefined' && old.nombre)?old.nombre:'' %>"
            placeholder="Nombre" />
          <small id="errorNombre"
            class="text-danger"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %>
          </small>
        </div>

        <label for="Categorias"></label>
        <select name="categories" class="controlls2">
          <option selected>Selecciona una Categoria</option>
          <option value="baño">Griferia Baño</option>
          <option value="cocina">Griferia Cocina</option>
          <option value="bachas">Bachas</option>
          <option value="sanitarios">Sanitarios</option>
          <option value="bañeras">Bañeras y Duchas</option>
          <option value="accesorios">Accesorios Varios</option>
        </select>
        <h3>Agregue 1 imagen</h3>
        <input class="controlls2" type="file" id="imagen" name="imagenes">

        </label>
        <label for="controlls2"></label>
        <div class="botons">
          <label for="exampleFormControlTextarea1">Descripción</label>
          <textarea class="form-control" id="descripcion" rows="3" name="descripcion"></textarea>
        </div>

        <div class="mt-5 mr-5 d-flex justify-content-center">
          <span id="msgError" class="text-danger"></span>
          <button type="submit" class="btn btn-outline-primary">Publicar</button></div>
        <p class="pull-left copyright backgroun"> <a href="/productos">Cancelar</a></li>
        </p>
      </form>

    </div>


  </main>

  <footer>
    <%- include('./partials/footer') %>
  </footer>

  <%- include('./partials/scripts') %>
  <script src="/javascript/productAdd.js"></script>
</body>

</html>